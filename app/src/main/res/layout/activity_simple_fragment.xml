<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SimpleFragment"
    >

    <ImageView
        android:id="@+id/karakter"
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:layout_marginBottom="-70dp"
        android:src="@drawable/nesi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/awan"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="-100dp"
        android:src="@drawable/dialog"
        app:layout_constraintBottom_toTopOf="@+id/karakter"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/dialog"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="-10dp"
        android:fontFamily="@font/grandstander"
        android:text="@string/dialog_1"
        android:textAlignment="center"
        android:textColor="#212121"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/karakter"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>